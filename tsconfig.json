{
    "compilerOptions": {
        "lib": [
            "es6",
            "es2015.reflect",
            "dom",
            "dom.iterable",
            "es2015.iterable"
        ],
        "types": [
            "reflect-metadata"
        ],
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "sourceMap": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "./test",
        "./src"
    ]
}
